<div class="sunrise-quantity-input{% if class %} {{ class }}{% endif %}">
  <label for="Quantity-{{ section.id }}" class="sunrise-quantity-input__label">
    {{ 'products.product.quantity.label' | t }}
  </label>
  
  <div class="sunrise-quantity-input__wrapper">
    <button
      type="button"
      class="sunrise-quantity-input__button sunrise-quantity-input__button--minus"
      aria-label="{{ 'products.product.quantity.decrease' | t: product: product.title | escape }}"
    >
      <svg class="sunrise-quantity-input__icon" width="12" height="12" viewBox="0 0 12 12" fill="none" stroke="currentColor" stroke-width="2">
        <line x1="4" y1="6" x2="8" y2="6"></line>
      </svg>
    </button>
    
    <input
      type="number"
      id="Quantity-{{ section.id }}"
      name="quantity"
      value="{{ quantity | default: 1 }}"
      min="1"
      max="{{ product.selected_or_first_available_variant.inventory_quantity | default: 999 }}"
      class="sunrise-quantity-input__input"
      form="{{ product_form_id }}"
    >
    
    <button
      type="button"
      class="sunrise-quantity-input__button sunrise-quantity-input__button--plus"
      aria-label="{{ 'products.product.quantity.increase' | t: product: product.title | escape }}"
    >
      <svg class="sunrise-quantity-input__icon" width="12" height="12" viewBox="0 0 12 12" fill="none" stroke="currentColor" stroke-width="2">
        <line x1="6" y1="4" x2="6" y2="8"></line>
        <line x1="4" y1="6" x2="8" y2="6"></line>
      </svg>
    </button>
  </div>
</div>
