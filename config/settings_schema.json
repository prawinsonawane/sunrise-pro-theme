[
  {
    "name": "theme_info",
    "theme_name": "Sunrise Pro",
    "theme_version": "1.0.0",
    "theme_author": "Sunrise Themes",
    "theme_documentation_url": "https://sunrise-themes.com/docs",
    "theme_support_url": "https://sunrise-themes.com/support"
  },
  {
    "name": "Brand Identity",
    "settings": [
      {
        "type": "image_picker",
        "id": "logo",
        "label": "Logo"
      },
      {
        "type": "range",
        "id": "logo_width",
        "min": 50,
        "max": 300,
        "step": 10,
        "default": 120,
        "unit": "px",
        "label": "Logo width"
      },
      {
        "type": "image_picker",
        "id": "favicon",
        "label": "Favicon"
      },
      {
        "type": "text",
        "id": "brand_tagline",
        "label": "Brand tagline",
        "default": "Premium Quality, Exceptional Service"
      }
    ]
  },
  {
    "name": "Color Schemes",
    "settings": [
      {
        "type": "color_scheme_group",
        "id": "color_schemes",
        "definition": [
          {
            "type": "color",
            "id": "background",
            "label": "Background",
            "default": "#FFFFFF"
          },
          {
            "type": "color_background",
            "id": "background_gradient",
            "label": "Background gradient"
          },
          {
            "type": "color",
            "id": "text",
            "label": "Text",
            "default": "#1A1A1A"
          },
          {
            "type": "color",
            "id": "accent",
            "label": "Accent color",
            "default": "#FF6B35"
          },
          {
            "type": "color",
            "id": "button",
            "label": "Button background",
            "default": "#FF6B35"
          },
          {
            "type": "color",
            "id": "button_label",
            "label": "Button text",
            "default": "#FFFFFF"
          },
          {
            "type": "color",
            "id": "secondary_button_label",
            "label": "Secondary button text",
            "default": "#FF6B35"
          },
          {
            "type": "color",
            "id": "shadow",
            "label": "Shadow",
            "default": "#000000"
          }
        ],
        "role": {
          "text": "text",
          "background": {
            "solid": "background",
            "gradient": "background_gradient"
          },
          "links": "secondary_button_label",
          "icons": "text",
          "primary_button": "button",
          "on_primary_button": "button_label",
          "primary_button_border": "button",
          "secondary_button": "background",
          "on_secondary_button": "secondary_button_label",
          "secondary_button_border": "secondary_button_label"
        }
      }
    ]
  },
  {
    "name": "Typography",
    "settings": [
      {
        "type": "header",
        "content": "Heading Font"
      },
      {
        "type": "font_picker",
        "id": "type_header_font",
        "default": "inter_n4",
        "label": "Heading font"
      },
      {
        "type": "range",
        "id": "heading_scale",
        "min": 100,
        "max": 150,
        "step": 5,
        "unit": "%",
        "label": "Heading scale",
        "default": 110
      },
      {
        "type": "header",
        "content": "Body Font"
      },
      {
        "type": "font_picker",
        "id": "type_body_font",
        "default": "inter_n4",
        "label": "Body font"
      },
      {
        "type": "range",
        "id": "body_scale",
        "min": 100,
        "max": 130,
        "step": 5,
        "unit": "%",
        "label": "Body scale",
        "default": 100
      }
    ]
  },
  {
    "name": "Layout",
    "settings": [
      {
        "type": "range",
        "id": "page_width",
        "min": 1000,
        "max": 1600,
        "step": 100,
        "default": 1200,
        "unit": "px",
        "label": "Page width"
      },
      {
        "type": "range",
        "id": "spacing_sections",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "Section spacing",
        "default": 20
      },
      {
        "type": "header",
        "content": "Grid Settings"
      },
      {
        "type": "range",
        "id": "spacing_grid_horizontal",
        "min": 4,
        "max": 40,
        "step": 4,
        "default": 12,
        "unit": "px",
        "label": "Horizontal spacing"
      },
      {
        "type": "range",
        "id": "spacing_grid_vertical",
        "min": 4,
        "max": 40,
        "step": 4,
        "default": 12,
        "unit": "px",
        "label": "Vertical spacing"
      }
    ]
  },
  {
    "name": "Animations & Effects",
    "settings": [
      {
        "type": "checkbox",
        "id": "animations_reveal_on_scroll",
        "label": "Enable scroll animations",
        "default": true
      },
      {
        "type": "select",
        "id": "animations_hover_elements",
        "options": [
          {
            "value": "subtle",
            "label": "Subtle"
          },
          {
            "value": "lift",
            "label": "Lift effect"
          },
          {
            "value": "scale",
            "label": "Scale effect"
          },
          {
            "value": "glow",
            "label": "Glow effect"
          }
        ],
        "default": "lift",
        "label": "Hover animations"
      },
      {
        "type": "checkbox",
        "id": "enable_parallax",
        "label": "Enable parallax scrolling",
        "default": false
      }
    ]
  },
  {
    "name": "Buttons & Forms",
    "settings": [
      {
        "type": "header",
        "content": "Button Styling"
      },
      {
        "type": "range",
        "id": "buttons_radius",
        "min": 0,
        "max": 40,
        "step": 2,
        "unit": "px",
        "label": "Button radius",
        "default": 8
      },
      {
        "type": "range",
        "id": "buttons_border_thickness",
        "min": 0,
        "max": 12,
        "step": 1,
        "unit": "px",
        "label": "Button border thickness",
        "default": 0
      },
      {
        "type": "range",
        "id": "buttons_shadow_opacity",
        "min": 0,
        "max": 100,
        "step": 5,
        "unit": "%",
        "label": "Button shadow opacity",
        "default": 20
      },
      {
        "type": "header",
        "content": "Form Styling"
      },
      {
        "type": "range",
        "id": "inputs_radius",
        "min": 0,
        "max": 40,
        "step": 2,
        "unit": "px",
        "label": "Input radius",
        "default": 8
      },
      {
        "type": "range",
        "id": "inputs_border_thickness",
        "min": 0,
        "max": 12,
        "step": 1,
        "unit": "px",
        "label": "Input border thickness",
        "default": 1
      }
    ]
  },
  {
    "name": "Product Cards",
    "settings": [
      {
        "type": "select",
        "id": "card_style",
        "options": [
          {
            "value": "minimal",
            "label": "Minimal"
          },
          {
            "value": "card",
            "label": "Card style"
          },
          {
            "value": "modern",
            "label": "Modern"
          }
        ],
        "default": "modern",
        "label": "Card style"
      },
      {
        "type": "range",
        "id": "card_image_padding",
        "min": 0,
        "max": 20,
        "step": 2,
        "unit": "px",
        "label": "Image padding",
        "default": 8
      },
      {
        "type": "select",
        "id": "card_text_alignment",
        "options": [
          {
            "value": "left",
            "label": "Left"
          },
          {
            "value": "center",
            "label": "Center"
          },
          {
            "value": "right",
            "label": "Right"
          }
        ],
        "default": "left",
        "label": "Text alignment"
      },
      {
        "type": "range",
        "id": "card_corner_radius",
        "min": 0,
        "max": 40,
        "step": 2,
        "unit": "px",
        "label": "Card radius",
        "default": 12
      },
      {
        "type": "range",
        "id": "card_shadow_opacity",
        "min": 0,
        "max": 100,
        "step": 5,
        "unit": "%",
        "label": "Card shadow opacity",
        "default": 15
      }
    ]
  },
  {
    "name": "Social Media",
    "settings": [
      {
        "type": "text",
        "id": "social_facebook_link",
        "label": "Facebook"
      },
      {
        "type": "text",
        "id": "social_instagram_link",
        "label": "Instagram"
      },
      {
        "type": "text",
        "id": "social_youtube_link",
        "label": "YouTube"
      },
      {
        "type": "text",
        "id": "social_tiktok_link",
        "label": "TikTok"
      },
      {
        "type": "text",
        "id": "social_twitter_link",
        "label": "Twitter"
      },
      {
        "type": "text",
        "id": "social_pinterest_link",
        "label": "Pinterest"
      }
    ]
  },
  {
    "name": "Search",
    "settings": [
      {
        "type": "checkbox",
        "id": "predictive_search_enabled",
        "default": true,
        "label": "Enable predictive search"
      },
      {
        "type": "checkbox",
        "id": "predictive_search_show_vendor",
        "default": true,
        "label": "Show vendor in search"
      },
      {
        "type": "checkbox",
        "id": "predictive_search_show_price",
        "default": true,
        "label": "Show price in search"
      }
    ]
  },
  {
    "name": "Cart",
    "settings": [
      {
        "type": "select",
        "id": "cart_type",
        "options": [
          {
            "value": "drawer",
            "label": "Drawer"
          },
          {
            "value": "page",
            "label": "Page"
          },
          {
            "value": "notification",
            "label": "Notification"
          }
        ],
        "default": "drawer",
        "label": "Cart type"
      },
      {
        "type": "checkbox",
        "id": "show_vendor",
        "label": "Show vendor",
        "default": false
      },
      {
        "type": "checkbox",
        "id": "show_cart_note",
        "label": "Show cart note",
        "default": true
      }
    ]
  },
  {
    "name": "SEO Settings",
    "settings": [
      {
        "type": "header",
        "content": "Search Engine Optimization"
      },
      {
        "type": "text",
        "id": "seo_title_suffix",
        "label": "Title suffix",
        "default": "| {{ shop.name }}",
        "info": "Text to append to page titles"
      },
      {
        "type": "textarea",
        "id": "seo_default_description",
        "label": "Default meta description",
        "default": "Shop premium products at {{ shop.name }}. Quality, style, and innovation in every piece.",
        "info": "Default description for pages without specific descriptions"
      },
      {
        "type": "image_picker",
        "id": "og_image",
        "label": "Default social sharing image",
        "info": "Image used when sharing on social media (1200x630px recommended)"
      },
      {
        "type": "checkbox",
        "id": "show_breadcrumbs",
        "default": true,
        "label": "Show breadcrumbs",
        "info": "Display breadcrumb navigation on product, collection, and article pages"
      },
      {
        "type": "checkbox",
        "id": "enable_structured_data",
        "default": true,
        "label": "Enable structured data",
        "info": "Add JSON-LD structured data for better search engine understanding"
      },
      {
        "type": "checkbox",
        "id": "enable_social_sharing",
        "default": true,
        "label": "Enable social sharing meta tags",
        "info": "Add Open Graph and Twitter Card meta tags"
      }
    ]
  },
  {
    "name": "Performance",
    "settings": [
      {
        "type": "checkbox",
        "id": "lazy_load_images",
        "label": "Lazy load images",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "preload_critical_css",
        "label": "Preload critical CSS",
        "default": true
      },
      {
        "type": "range",
        "id": "image_quality",
        "min": 60,
        "max": 100,
        "step": 5,
        "unit": "%",
        "label": "Image quality",
        "default": 85
      }
    ]
  }
]
