{{ 'sunrise-related-products.css' | asset_url | stylesheet_tag }}

{%- liquid
  assign related_products = product.metafields.custom.related_products.value
  if related_products == blank
    assign related_products = collections[section.settings.collection].products
  endif
  if related_products == blank
    assign related_products = collections[product.tags.first] | default: collections.all
  endif
-%}

{%- style -%}
  .sunrise-related-products {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .sunrise-related-products {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="sunrise-related-products color-{{ section.settings.color_scheme }} sunrise-gradient">
  <div class="page-width sunrise-related-products__container">
    {%- if section.settings.heading != blank -%}
      <div class="sunrise-related-products__header sunrise-text-center{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}">
        <h2 class="sunrise-related-products__title sunrise-related-products__title--{{ section.settings.heading_size }}">
          {{ section.settings.heading | escape }}
        </h2>
        {%- if section.settings.description != blank -%}
          <div class="sunrise-related-products__description sunrise-rte">
            {{ section.settings.description }}
          </div>
        {%- endif -%}
      </div>
    {%- endif -%}

    {%- if related_products.size > 0 -%}
      <div class="sunrise-related-products__grid sunrise-grid sunrise-grid--{{ section.settings.columns_desktop }}-col-desktop sunrise-grid--{{ section.settings.columns_mobile }}-col-mobile">
        {%- for related_product in related_products limit: section.settings.products_to_show -%}
          {%- unless related_product.id == product.id -%}
            <div class="sunrise-related-products__item sunrise-grid__item{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
              {%- render 'sunrise-product-card', product: related_product, show_vendor: section.settings.show_vendor, show_rating: section.settings.show_rating, show_quick_add: section.settings.show_quick_add -%}
            </div>
          {%- endunless -%}
        {%- endfor -%}
      </div>

      {%- if section.settings.show_view_all and section.settings.view_all_text != blank -%}
        <div class="sunrise-related-products__footer sunrise-text-center{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
          <a href="{{ section.settings.view_all_link | default: '/collections/all' }}" class="sunrise-button{% if section.settings.view_all_style == 'secondary' %} sunrise-button--secondary{% endif %}">
            {{ section.settings.view_all_text | escape }}
          </a>
        </div>
      {%- endif -%}
    {%- else -%}
      <div class="sunrise-related-products__empty sunrise-text-center">
        <div class="sunrise-related-products__empty-content">
          <svg class="sunrise-related-products__empty-icon" width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1">
            <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
            <circle cx="8.5" cy="8.5" r="1.5"></circle>
            <polyline points="21,15 16,10 5,21"></polyline>
          </svg>
          <h3>No related products found</h3>
          <p>Please select a collection or add related products to display here.</p>
        </div>
      </div>
    {%- endif -%}
  </div>
</div>

{% schema %}
{
  "name": "Related products",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "default": "You may also like",
      "label": "Heading"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        {
          "value": "h2",
          "label": "Small"
        },
        {
          "value": "h1",
          "label": "Medium"
        },
        {
          "value": "h0",
          "label": "Large"
        }
      ],
      "default": "h1",
      "label": "Heading size"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection",
      "info": "Select a collection to show related products. If no collection is selected, products will be based on product tags."
    },
    {
      "type": "range",
      "id": "products_to_show",
      "min": 2,
      "max": 12,
      "step": 1,
      "default": 4,
      "label": "Maximum products to show"
    },
    {
      "type": "range",
      "id": "columns_desktop",
      "min": 1,
      "max": 6,
      "step": 1,
      "default": 4,
      "label": "Number of columns on desktop"
    },
    {
      "type": "select",
      "id": "columns_mobile",
      "options": [
        {
          "value": "1",
          "label": "1 column"
        },
        {
          "value": "2",
          "label": "2 columns"
        }
      ],
      "default": "2",
      "label": "Number of columns on mobile"
    },
    {
      "type": "checkbox",
      "id": "show_vendor",
      "default": false,
      "label": "Show vendor"
    },
    {
      "type": "checkbox",
      "id": "show_rating",
      "default": true,
      "label": "Show rating"
    },
    {
      "type": "checkbox",
      "id": "show_quick_add",
      "default": true,
      "label": "Show quick add"
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "default": true,
      "label": "Show 'View all' button"
    },
    {
      "type": "text",
      "id": "view_all_text",
      "default": "View all products",
      "label": "Button text"
    },
    {
      "type": "url",
      "id": "view_all_link",
      "label": "Button link"
    },
    {
      "type": "select",
      "id": "view_all_style",
      "options": [
        {
          "value": "primary",
          "label": "Primary"
        },
        {
          "value": "secondary",
          "label": "Secondary"
        }
      ],
      "default": "primary",
      "label": "Button style"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding bottom",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Related products"
    }
  ]
}
{% endschema %}
