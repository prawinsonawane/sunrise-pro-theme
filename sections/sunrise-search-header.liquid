{{ 'sunrise-search-header.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .sunrise-search-header {
    text-align: center;
    padding: 3rem 0;
    background: linear-gradient(135deg, var(--color-background) 0%, var(--color-background-secondary) 100%);
  }
  
  .sunrise-search-header__container {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 2rem;
  }
  
  .sunrise-search-header__title {
    font-size: 3rem;
    font-weight: 700;
    color: var(--color-text);
    margin-bottom: 1rem;
    line-height: 1.2;
  }
  
  .sunrise-search-header__subtitle {
    font-size: 1.125rem;
    color: var(--color-text-muted);
    line-height: 1.6;
  }
  
  @media (max-width: 768px) {
    .sunrise-search-header {
      padding: 2rem 0;
    }
    
    .sunrise-search-header__title {
      font-size: 2rem;
    }
    
    .sunrise-search-header__subtitle {
      font-size: 1rem;
    }
    
    .sunrise-search-header__container {
      padding: 0 1rem;
    }
  }
{%- endstyle -%}

<div class="sunrise-search-header">
  <div class="sunrise-search-header__container">
    <h1 class="sunrise-search-header__title">
      {%- if search.performed -%}
        {{ 'templates.search.results_for' | t: terms: search.terms }}
      {%- else -%}
        {{ 'templates.search.title' | t }}
      {%- endif -%}
    </h1>
    
    {%- if search.performed -%}
      <p class="sunrise-search-header__subtitle">
        {{ 'templates.search.results_with_count' | t: count: search.results_count, terms: search.terms }}
      </p>
    {%- else -%}
      <p class="sunrise-search-header__subtitle">
        {{ section.settings.subheading | default: 'Search for products, collections, and more' }}
      </p>
    {%- endif -%}
  </div>
</div>

{% schema %}
{
  "name": "Search Header",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "Search Header Settings"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Search for products, collections, and more"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color Scheme",
      "default": "scheme-1"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding Top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 60
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding Bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 40
    }
  ]
}
{% endschema %}
