{{ 'sunrise-video.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .sunrise-video {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .sunrise-video {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

{%- liquid
  assign video_id = section.settings.video.id | default: section.settings.video_url.id
  assign video_id = video_id
  assign video_alt = section.settings.video.alt | default: section.settings.description
  assign alt = 'Video' | t: description: video_alt | escape
  assign poster = section.settings.video.preview_image | default: section.settings.cover_image
-%}

<div class="sunrise-video color-{{ section.settings.color_scheme }} sunrise-gradient">
  <div class="sunrise-video__container{% unless section.settings.full_width %} page-width{% endunless %}">
    {%- for block in section.blocks -%}
      {%- case block.type -%}
        {%- when 'heading' -%}
          <div class="sunrise-video__header sunrise-text-center{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}" {{ block.shopify_attributes }}>
            <h2 class="sunrise-video__title sunrise-video__title--{{ block.settings.heading_size }}">
              {{ block.settings.heading | escape }}
            </h2>
          </div>
        {%- when 'description' -%}
          <div class="sunrise-video__description sunrise-rte sunrise-text-center{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}" {{ block.shopify_attributes }}>
            {{ block.settings.text }}
          </div>
      {%- endcase -%}
    {%- endfor -%}

    <div class="sunrise-video__media{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
      {%- if section.settings.video != blank -%}
        <div class="sunrise-video__wrapper sunrise-video__wrapper--{{ section.settings.video_height }}">
          <video
            class="sunrise-video__element"
            poster="{{ poster | image_url: width: 1920 }}"
            preload="metadata"
            muted
            playsinline
            {% if section.settings.autoplay %}autoplay{% endif %}
            {% if section.settings.loop %}loop{% endif %}
          >
            <source src="{{ section.settings.video }}" type="video/mp4">
            Your browser does not support the video tag.
          </video>
          
          {%- if section.settings.show_controls -%}
            <div class="sunrise-video__controls">
              <button class="sunrise-video__play-pause" aria-label="Play/Pause video">
                <svg class="sunrise-video__play-icon" width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M8 5v14l11-7z"/>
                </svg>
                <svg class="sunrise-video__pause-icon hidden" width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M6 19h4V5H6v14zm8-14v14h4V5h-4z"/>
                </svg>
              </button>
              <div class="sunrise-video__progress">
                <div class="sunrise-video__progress-bar">
                  <div class="sunrise-video__progress-fill"></div>
                </div>
              </div>
              <div class="sunrise-video__time">
                <span class="sunrise-video__current-time">0:00</span>
                <span class="sunrise-video__duration">0:00</span>
              </div>
            </div>
          {%- endif -%}
        </div>
      {%- elsif section.settings.video_url != blank -%}
        <div class="sunrise-video__wrapper sunrise-video__wrapper--{{ section.settings.video_height }}">
          <div class="sunrise-video__embed">
            {%- if section.settings.video_url.type == 'youtube' -%}
              <iframe
                src="https://www.youtube.com/embed/{{ section.settings.video_url.id }}?autoplay={{ section.settings.autoplay | default: false }}&loop={{ section.settings.loop | default: false }}&mute={{ section.settings.mute | default: true }}"
                class="sunrise-video__iframe"
                allow="autoplay; encrypted-media"
                allowfullscreen
                title="{{ alt }}"
              ></iframe>
            {%- elsif section.settings.video_url.type == 'vimeo' -%}
              <iframe
                src="https://player.vimeo.com/video/{{ section.settings.video_url.id }}?autoplay={{ section.settings.autoplay | default: false }}&loop={{ section.settings.loop | default: false }}&muted={{ section.settings.mute | default: true }}"
                class="sunrise-video__iframe"
                allow="autoplay; fullscreen"
                allowfullscreen
                title="{{ alt }}"
              ></iframe>
            {%- endif -%}
          </div>
        </div>
      {%- else -%}
        <div class="sunrise-video__placeholder">
          <div class="sunrise-video__placeholder-content sunrise-text-center">
            <svg class="sunrise-video__placeholder-icon" width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1">
              <polygon points="5,3 19,12 5,21"></polygon>
            </svg>
            <h3>No video selected</h3>
            <p>Please add a video file or YouTube/Vimeo URL to display here.</p>
          </div>
        </div>
      {%- endif -%}
    </div>
  </div>
</div>

<script src="{{ 'sunrise-video.js' | asset_url }}" defer="defer"></script>

{% schema %}
{
  "name": "Video",
  "tag": "section",
  "class": "section",
  "blocks": [
    {
      "type": "heading",
      "name": "Heading",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "default": "Video",
          "label": "Heading"
        },
        {
          "type": "select",
          "id": "heading_size",
          "options": [
            {
              "value": "h2",
              "label": "Small"
            },
            {
              "value": "h1",
              "label": "Medium"
            },
            {
              "value": "h0",
              "label": "Large"
            }
          ],
          "default": "h1",
          "label": "Heading size"
        }
      ]
    },
    {
      "type": "description",
      "name": "Description",
      "limit": 1,
      "settings": [
        {
          "type": "richtext",
          "id": "text",
          "label": "Description"
        }
      ]
    }
  ],
  "settings": [
    {
      "type": "video",
      "id": "video",
      "label": "Video file"
    },
    {
      "type": "video_url",
      "id": "video_url",
      "accept": ["youtube", "vimeo"],
      "default": "https://www.youtube.com/watch?v=_9VUPq3SxOc",
      "label": "Video URL",
      "info": "Accepts YouTube or Vimeo URLs"
    },
    {
      "type": "image_picker",
      "id": "cover_image",
      "label": "Cover image"
    },
    {
      "type": "select",
      "id": "video_height",
      "options": [
        {
          "value": "small",
          "label": "Small"
        },
        {
          "value": "medium",
          "label": "Medium"
        },
        {
          "value": "large",
          "label": "Large"
        }
      ],
      "default": "medium",
      "label": "Video height"
    },
    {
      "type": "checkbox",
      "id": "full_width",
      "default": false,
      "label": "Make video full width"
    },
    {
      "type": "checkbox",
      "id": "autoplay",
      "default": false,
      "label": "Autoplay video",
      "info": "Video will be muted if autoplay is enabled"
    },
    {
      "type": "checkbox",
      "id": "loop",
      "default": false,
      "label": "Loop video"
    },
    {
      "type": "checkbox",
      "id": "mute",
      "default": true,
      "label": "Mute video"
    },
    {
      "type": "checkbox",
      "id": "show_controls",
      "default": true,
      "label": "Show video controls"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding bottom",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Video",
      "blocks": [
        {
          "type": "heading"
        },
        {
          "type": "description"
        }
      ]
    }
  ]
}
{% endschema %}
