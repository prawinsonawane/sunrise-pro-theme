{{ 'sunrise-collection-banner.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .sunrise-collection-banner {
    position: relative;
    overflow: hidden;
    min-height: 300px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, var(--color-background) 0%, var(--color-background-secondary) 100%);
  }
  
  .sunrise-collection-banner--has-image {
    background: none;
  }
  
  .sunrise-collection-banner__image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 1;
  }
  
  .sunrise-collection-banner__overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.3);
    z-index: 2;
  }
  
  .sunrise-collection-banner__content {
    position: relative;
    z-index: 3;
    text-align: center;
    color: var(--color-text);
    max-width: 600px;
    padding: 0 2rem;
  }
  
  .sunrise-collection-banner--has-image .sunrise-collection-banner__content {
    color: white;
  }
  
  .sunrise-collection-banner__title {
    font-size: 3rem;
    font-weight: 700;
    margin-bottom: 1rem;
    line-height: 1.2;
  }
  
  .sunrise-collection-banner__description {
    font-size: 1.125rem;
    line-height: 1.6;
    opacity: 0.9;
  }
  
  .sunrise-collection-banner__count {
    margin-top: 1rem;
    font-size: 0.875rem;
    opacity: 0.8;
  }
  
  @media (max-width: 768px) {
    .sunrise-collection-banner {
      min-height: 200px;
    }
    
    .sunrise-collection-banner__title {
      font-size: 2rem;
    }
    
    .sunrise-collection-banner__description {
      font-size: 1rem;
    }
    
    .sunrise-collection-banner__content {
      padding: 0 1rem;
    }
  }
{%- endstyle -%}

<div class="sunrise-collection-banner{% if collection.image %} sunrise-collection-banner--has-image{% endif %}">
  {%- if collection.image -%}
    {{
      collection.image
      | image_url: width: 1920
      | image_tag:
        class: 'sunrise-collection-banner__image',
        loading: 'eager',
        alt: collection.title | escape
    }}
    <div class="sunrise-collection-banner__overlay"></div>
  {%- endif -%}
  
  <div class="sunrise-collection-banner__content">
    <h1 class="sunrise-collection-banner__title">{{ collection.title }}</h1>
    
    {%- if collection.description != blank and section.settings.show_collection_description -%}
      <div class="sunrise-collection-banner__description">
        {{ collection.description }}
      </div>
    {%- endif -%}
    
    {%- if section.settings.show_product_count -%}
      <div class="sunrise-collection-banner__count">
        {{ collection.products_count }} {{ 'sections.collection_list.product_count' | t: count: collection.products_count }}
      </div>
    {%- endif -%}
  </div>
</div>

{% schema %}
{
  "name": "Collection Banner",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "Collection Banner Settings"
    },
    {
      "type": "checkbox",
      "id": "show_collection_description",
      "label": "Show Collection Description",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_collection_image",
      "label": "Show Collection Image",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_product_count",
      "label": "Show Product Count",
      "default": true
    },
    {
      "type": "range",
      "id": "banner_height",
      "label": "Banner Height",
      "min": 200,
      "max": 500,
      "step": 50,
      "default": 300,
      "unit": "px"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color Scheme",
      "default": "scheme-1"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding Top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding Bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 0
    }
  ]
}
{% endschema %}
