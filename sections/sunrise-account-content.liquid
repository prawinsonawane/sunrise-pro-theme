{{ 'sunrise-account-content.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .sunrise-account-content {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem 0;
  }
  
  .sunrise-account-content__header {
    margin-bottom: 2rem;
  }
  
  .sunrise-account-content__title {
    font-size: 2rem;
    font-weight: 700;
    color: var(--color-text);
    margin-bottom: 0.5rem;
  }
  
  .sunrise-account-content__subtitle {
    color: var(--color-text-muted);
  }
  
  .sunrise-account-content__tabs {
    display: flex;
    border-bottom: 1px solid var(--color-border);
    margin-bottom: 2rem;
  }
  
  .sunrise-account-content__tab {
    padding: 1rem 1.5rem;
    background: none;
    border: none;
    color: var(--color-text-muted);
    font-weight: 500;
    cursor: pointer;
    transition: color 0.3s ease;
    border-bottom: 2px solid transparent;
  }
  
  .sunrise-account-content__tab:hover {
    color: var(--color-primary);
  }
  
  .sunrise-account-content__tab--active {
    color: var(--color-primary);
    border-bottom-color: var(--color-primary);
  }
  
  .sunrise-account-content__content {
    min-height: 400px;
  }
  
  .sunrise-account-content__section {
    display: none;
  }
  
  .sunrise-account-content__section--active {
    display: block;
  }
  
  .sunrise-account-content__orders {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
  
  .sunrise-account-content__order {
    padding: 1.5rem;
    background-color: var(--color-background);
    border: 1px solid var(--color-border);
    border-radius: var(--border-radius);
  }
  
  .sunrise-account-content__order-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
  }
  
  .sunrise-account-content__order-number {
    font-weight: 600;
    color: var(--color-text);
  }
  
  .sunrise-account-content__order-date {
    color: var(--color-text-muted);
    font-size: 0.875rem;
  }
  
  .sunrise-account-content__order-status {
    padding: 0.25rem 0.75rem;
    background-color: var(--color-background-secondary);
    border: 1px solid var(--color-border);
    border-radius: var(--border-radius-sm);
    font-size: 0.75rem;
    font-weight: 500;
    text-transform: uppercase;
  }
  
  .sunrise-account-content__order-total {
    font-weight: 600;
    color: var(--color-primary);
  }
  
  .sunrise-account-content__addresses {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 1.5rem;
  }
  
  .sunrise-account-content__address {
    padding: 1.5rem;
    background-color: var(--color-background);
    border: 1px solid var(--color-border);
    border-radius: var(--border-radius);
  }
  
  .sunrise-account-content__address-title {
    font-weight: 600;
    color: var(--color-text);
    margin-bottom: 1rem;
  }
  
  .sunrise-account-content__address-content {
    color: var(--color-text-muted);
    line-height: 1.6;
  }
  
  .sunrise-account-content__empty {
    text-align: center;
    padding: 3rem 1rem;
  }
  
  .sunrise-account-content__empty-icon {
    width: 3rem;
    height: 3rem;
    margin: 0 auto 1rem;
    color: var(--color-text-muted);
  }
  
  .sunrise-account-content__empty-title {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--color-text);
    margin-bottom: 0.5rem;
  }
  
  .sunrise-account-content__empty-description {
    color: var(--color-text-muted);
    margin-bottom: 1.5rem;
  }
  
  .sunrise-account-content__empty-button {
    display: inline-block;
    padding: 0.75rem 1.5rem;
    background-color: var(--color-primary);
    color: var(--color-primary-contrast);
    text-decoration: none;
    border-radius: var(--border-radius);
    font-weight: 500;
    transition: background-color 0.3s ease;
  }
  
  .sunrise-account-content__empty-button:hover {
    background-color: var(--color-primary-dark);
  }
  
  @media (max-width: 768px) {
    .sunrise-account-content__tabs {
      flex-wrap: wrap;
    }
    
    .sunrise-account-content__tab {
      padding: 0.75rem 1rem;
      font-size: 0.875rem;
    }
    
    .sunrise-account-content__order-header {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.5rem;
    }
    
    .sunrise-account-content__addresses {
      grid-template-columns: 1fr;
    }
  }
{%- endstyle -%}

<div class="sunrise-account-content">
  <div class="sunrise-account-content__header">
    <h1 class="sunrise-account-content__title">My Account</h1>
    <p class="sunrise-account-content__subtitle">Welcome back, {{ customer.first_name }}!</p>
  </div>
  
  <div class="sunrise-account-content__tabs">
    <button class="sunrise-account-content__tab sunrise-account-content__tab--active" data-tab="orders">
      Order History
    </button>
    <button class="sunrise-account-content__tab" data-tab="addresses">
      Addresses
    </button>
    <button class="sunrise-account-content__tab" data-tab="details">
      Account Details
    </button>
  </div>
  
  <div class="sunrise-account-content__content">
    <div class="sunrise-account-content__section sunrise-account-content__section--active" id="orders">
      {%- if customer.orders.size > 0 -%}
        <div class="sunrise-account-content__orders">
          {%- for order in customer.orders -%}
            <div class="sunrise-account-content__order">
              <div class="sunrise-account-content__order-header">
                <div>
                  <div class="sunrise-account-content__order-number">Order {{ order.name }}</div>
                  <div class="sunrise-account-content__order-date">{{ order.created_at | date: '%B %d, %Y' }}</div>
                </div>
                <div class="sunrise-account-content__order-status">{{ order.fulfillment_status | default: 'Unfulfilled' }}</div>
              </div>
              <div class="sunrise-account-content__order-total">{{ order.total_price | money }}</div>
            </div>
          {%- endfor -%}
        </div>
      {%- else -%}
        <div class="sunrise-account-content__empty">
          <svg class="sunrise-account-content__empty-icon" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1">
            <circle cx="9" cy="21" r="1"/>
            <circle cx="20" cy="21" r="1"/>
            <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"/>
          </svg>
          <h2 class="sunrise-account-content__empty-title">No orders yet</h2>
          <p class="sunrise-account-content__empty-description">You haven't placed any orders yet.</p>
          <a href="{{ routes.all_products_collection_url }}" class="sunrise-account-content__empty-button">
            Start Shopping
          </a>
        </div>
      {%- endif -%}
    </div>
    
    <div class="sunrise-account-content__section" id="addresses">
      {%- if customer.addresses.size > 0 -%}
        <div class="sunrise-account-content__addresses">
          {%- for address in customer.addresses -%}
            <div class="sunrise-account-content__address">
              <h3 class="sunrise-account-content__address-title">
                {%- if address == customer.default_address -%}Default {%- endif -%}Address
              </h3>
              <div class="sunrise-account-content__address-content">
                {{ address | format_address }}
              </div>
            </div>
          {%- endfor -%}
        </div>
      {%- else -%}
        <div class="sunrise-account-content__empty">
          <svg class="sunrise-account-content__empty-icon" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1">
            <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/>
            <circle cx="12" cy="10" r="3"/>
          </svg>
          <h2 class="sunrise-account-content__empty-title">No addresses saved</h2>
          <p class="sunrise-account-content__empty-description">You haven't saved any addresses yet.</p>
        </div>
      {%- endif -%}
    </div>
    
    <div class="sunrise-account-content__section" id="details">
      <div class="sunrise-account-content__address">
        <h3 class="sunrise-account-content__address-title">Account Information</h3>
        <div class="sunrise-account-content__address-content">
          <p><strong>Name:</strong> {{ customer.first_name }} {{ customer.last_name }}</p>
          <p><strong>Email:</strong> {{ customer.email }}</p>
          <p><strong>Member since:</strong> {{ customer.created_at | date: '%B %d, %Y' }}</p>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const tabs = document.querySelectorAll('.sunrise-account-content__tab');
    const sections = document.querySelectorAll('.sunrise-account-content__section');
    
    tabs.forEach(tab => {
      tab.addEventListener('click', function() {
        const targetTab = this.dataset.tab;
        
        // Remove active class from all tabs and sections
        tabs.forEach(t => t.classList.remove('sunrise-account-content__tab--active'));
        sections.forEach(s => s.classList.remove('sunrise-account-content__section--active'));
        
        // Add active class to clicked tab and corresponding section
        this.classList.add('sunrise-account-content__tab--active');
        document.getElementById(targetTab).classList.add('sunrise-account-content__section--active');
      });
    });
  });
</script>

{% schema %}
{
  "name": "Account Content",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "Account Content Settings"
    },
    {
      "type": "checkbox",
      "id": "show_orders",
      "label": "Show Order History",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_addresses",
      "label": "Show Addresses",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_details",
      "label": "Show Account Details",
      "default": true
    }
  ]
}
{% endschema %}
