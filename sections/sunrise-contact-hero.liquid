{{ 'sunrise-contact-hero.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .sunrise-contact-hero {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .sunrise-contact-hero {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  {%- if section.settings.background_image != blank -%}
    .sunrise-contact-hero__background {
      background-image: url('{{ section.settings.background_image | image_url: width: 1920 }}');
    }
  {%- endif -%}
{%- endstyle -%}

<div class="sunrise-contact-hero color-{{ section.settings.color_scheme }} sunrise-gradient">
  <div class="sunrise-contact-hero__background"></div>
  <div class="page-width sunrise-contact-hero__container">
    <div class="sunrise-contact-hero__content sunrise-text-center{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}">
      {%- if section.settings.heading != blank -%}
        <h1 class="sunrise-contact-hero__title sunrise-contact-hero__title--{{ section.settings.heading_size }}">
          {{ section.settings.heading | escape }}
        </h1>
      {%- endif -%}
      
      {%- if section.settings.subheading != blank -%}
        <div class="sunrise-contact-hero__subtitle sunrise-rte">
          {{ section.settings.subheading }}
        </div>
      {%- endif -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Contact hero",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "default": "Contact Us",
      "label": "Heading"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        {
          "value": "h2",
          "label": "Small"
        },
        {
          "value": "h1",
          "label": "Medium"
        },
        {
          "value": "h0",
          "label": "Large"
        }
      ],
      "default": "h1",
      "label": "Heading size"
    },
    {
      "type": "richtext",
      "id": "subheading",
      "label": "Subheading"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background image"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding top",
      "default": 60
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding bottom",
      "default": 40
    }
  ],
  "presets": [
    {
      "name": "Contact hero"
    }
  ]
}
{% endschema %}
