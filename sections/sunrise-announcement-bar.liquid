{{ 'sunrise-announcement-bar.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .sunrise-announcement-bar {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .sunrise-announcement-bar {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="sunrise-announcement-bar color-{{ section.settings.color_scheme }} sunrise-gradient">
  <div class="page-width sunrise-announcement-bar__container">
    {%- if section.blocks.size > 0 -%}
      <div class="sunrise-announcement-bar__content sunrise-text-center">
        {%- for block in section.blocks -%}
          {%- case block.type -%}
            {%- when 'announcement' -%}
              <div class="sunrise-announcement-bar__item" {{ block.shopify_attributes }}>
                {%- if block.settings.link != blank -%}
                  <a href="{{ block.settings.link }}" class="sunrise-announcement-bar__link">
                    {{ block.settings.text | escape }}
                  </a>
                {%- else -%}
                  <p class="sunrise-announcement-bar__text">
                    {{ block.settings.text | escape }}
                  </p>
                {%- endif -%}
              </div>
          {%- endcase -%}
        {%- endfor -%}
      </div>
    {%- elsif section.settings.text != blank -%}
      <div class="sunrise-announcement-bar__content sunrise-text-center">
        {%- if section.settings.link != blank -%}
          <a href="{{ section.settings.link }}" class="sunrise-announcement-bar__link">
            {{ section.settings.text | escape }}
          </a>
        {%- else -%}
          <p class="sunrise-announcement-bar__text">
            {{ section.settings.text | escape }}
          </p>
        {%- endif -%}
      </div>
    {%- endif -%}
  </div>
</div>

{% schema %}
{
  "name": "Announcement bar",
  "tag": "section",
  "class": "section",
  "blocks": [
    {
      "type": "announcement",
      "name": "Announcement",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "default": "Welcome to our store",
          "label": "Text"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "settings": [
    {
      "type": "text",
      "id": "text",
      "default": "Welcome to our store",
      "label": "Text",
      "info": "Legacy setting - use blocks instead for better customization"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Link",
      "info": "Legacy setting - use blocks instead for better customization"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding top",
      "default": 8
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding bottom",
      "default": 8
    }
  ],
  "presets": [
    {
      "name": "Announcement bar",
      "blocks": [
        {
          "type": "announcement"
        }
      ]
    }
  ]
}
{% endschema %}
