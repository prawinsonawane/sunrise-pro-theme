{{ 'sunrise-article-footer.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .sunrise-article-footer {
    padding: 2rem 0;
    border-top: 1px solid var(--color-border);
    margin-top: 3rem;
  }
  
  .sunrise-article-footer__content {
    display: grid;
    grid-template-columns: 1fr auto;
    gap: 2rem;
    align-items: center;
  }
  
  .sunrise-article-footer__meta {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }
  
  .sunrise-article-footer__author {
    font-weight: 600;
    color: var(--color-text);
  }
  
  .sunrise-article-footer__date {
    color: var(--color-text-muted);
    font-size: 0.875rem;
  }
  
  .sunrise-article-footer__tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-top: 1rem;
  }
  
  .sunrise-article-footer__tag {
    padding: 0.25rem 0.75rem;
    background-color: var(--color-background-secondary);
    border: 1px solid var(--color-border);
    border-radius: var(--border-radius-sm);
    color: var(--color-text-muted);
    text-decoration: none;
    font-size: 0.75rem;
    transition: all 0.3s ease;
  }
  
  .sunrise-article-footer__tag:hover {
    background-color: var(--color-primary);
    color: var(--color-primary-contrast);
    border-color: var(--color-primary);
  }
  
  .sunrise-article-footer__actions {
    display: flex;
    gap: 1rem;
  }
  
  .sunrise-article-footer__action {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1rem;
    background-color: var(--color-background);
    border: 1px solid var(--color-border);
    border-radius: var(--border-radius);
    color: var(--color-text);
    text-decoration: none;
    font-size: 0.875rem;
    transition: all 0.3s ease;
  }
  
  .sunrise-article-footer__action:hover {
    background-color: var(--color-primary);
    color: var(--color-primary-contrast);
    border-color: var(--color-primary);
  }
  
  .sunrise-article-footer__action svg {
    width: 1rem;
    height: 1rem;
  }
  
  @media (max-width: 768px) {
    .sunrise-article-footer__content {
      grid-template-columns: 1fr;
      gap: 1rem;
    }
    
    .sunrise-article-footer__actions {
      justify-content: center;
    }
  }
{%- endstyle -%}

<div class="sunrise-article-footer">
  <div class="sunrise-article-footer__content">
    <div class="sunrise-article-footer__meta">
      {%- if article.author -%}
        <div class="sunrise-article-footer__author">
          {{ 'sections.blog.by_author' | t: author: article.author }}
        </div>
      {%- endif -%}
      
      <div class="sunrise-article-footer__date">
        {{ article.published_at | date: '%B %d, %Y' }}
      </div>
      
      {%- if article.tags.size > 0 -%}
        <div class="sunrise-article-footer__tags">
          {%- for tag in article.tags -%}
            <a href="{{ blog.url }}/tagged/{{ tag | handle }}" class="sunrise-article-footer__tag">
              {{ tag }}
            </a>
          {%- endfor -%}
        </div>
      {%- endif -%}
    </div>
    
    <div class="sunrise-article-footer__actions">
      <a href="{{ blog.url }}" class="sunrise-article-footer__action">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M19 12H5M12 19l-7-7 7-7"/>
        </svg>
        {{ 'sections.blog.back_to_blog' | t }}
      </a>
      
      <a href="#" class="sunrise-article-footer__action" onclick="window.print(); return false;">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <polyline points="6,9 6,2 18,2 18,9"/>
          <path d="M6 18H4a2 2 0 0 1-2-2v-5a2 2 0 0 1 2-2h16a2 2 0 0 1 2 2v5a2 2 0 0 1-2 2h-2"/>
          <rect x="6" y="14" width="12" height="8"/>
        </svg>
        Print Article
      </a>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Article Footer",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "Article Footer Settings"
    },
    {
      "type": "checkbox",
      "id": "show_author",
      "label": "Show Author",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_date",
      "label": "Show Date",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_tags",
      "label": "Show Tags",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_back_button",
      "label": "Show Back to Blog Button",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_print_button",
      "label": "Show Print Button",
      "default": true
    }
  ]
}
{% endschema %}
