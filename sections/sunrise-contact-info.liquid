{{ 'sunrise-contact-info.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .sunrise-contact-info {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .sunrise-contact-info {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="sunrise-contact-info color-{{ section.settings.color_scheme }} sunrise-gradient">
  <div class="page-width sunrise-contact-info__container">
    <div class="sunrise-contact-info__grid sunrise-grid sunrise-grid--3-col-desktop sunrise-grid--1-col-mobile">
      
      {%- if section.settings.show_store_info -%}
        <div class="sunrise-contact-info__item sunrise-grid__item{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
          <div class="sunrise-contact-info__card sunrise-card">
            <div class="sunrise-contact-info__icon">
              <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/>
                <circle cx="12" cy="10" r="3"/>
              </svg>
            </div>
            <h3 class="sunrise-contact-info__title">{{ 'sections.contact_info.store_info' | t }}</h3>
            <div class="sunrise-contact-info__content sunrise-rte">
              {%- if shop.address != blank -%}
                <p><strong>{{ 'sections.contact_info.address' | t }}:</strong><br>
                {{ shop.address.address1 }}<br>
                {%- if shop.address.address2 != blank -%}{{ shop.address.address2 }}<br>{%- endif -%}
                {{ shop.address.city }}, {{ shop.address.province }} {{ shop.address.zip }}<br>
                {{ shop.address.country }}</p>
              {%- endif -%}
            </div>
          </div>
        </div>
      {%- endif -%}

      {%- if section.settings.show_business_hours -%}
        <div class="sunrise-contact-info__item sunrise-grid__item{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
          <div class="sunrise-contact-info__card sunrise-card">
            <div class="sunrise-contact-info__icon">
              <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                <circle cx="12" cy="12" r="10"/>
                <polyline points="12,6 12,12 16,14"/>
              </svg>
            </div>
            <h3 class="sunrise-contact-info__title">{{ 'sections.contact_info.business_hours' | t }}</h3>
            <div class="sunrise-contact-info__content sunrise-rte">
              <p><strong>{{ 'sections.contact_info.monday_friday' | t }}:</strong> 9:00 AM - 6:00 PM<br>
              <strong>{{ 'sections.contact_info.saturday' | t }}:</strong> 10:00 AM - 4:00 PM<br>
              <strong>{{ 'sections.contact_info.sunday' | t }}:</strong> {{ 'sections.contact_info.closed' | t }}</p>
            </div>
          </div>
        </div>
      {%- endif -%}

      {%- if section.settings.show_contact_methods -%}
        <div class="sunrise-contact-info__item sunrise-grid__item{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
          <div class="sunrise-contact-info__card sunrise-card">
            <div class="sunrise-contact-info__icon">
              <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>
              </svg>
            </div>
            <h3 class="sunrise-contact-info__title">{{ 'sections.contact_info.contact_methods' | t }}</h3>
            <div class="sunrise-contact-info__content sunrise-rte">
              <p><strong>{{ 'sections.contact_info.phone' | t }}:</strong> <a href="tel:{{ shop.phone | default: '+1-555-123-4567' }}">{{ shop.phone | default: '+1-555-123-4567' }}</a><br>
              <strong>{{ 'sections.contact_info.email' | t }}:</strong> <a href="mailto:{{ shop.email | default: 'info@example.com' }}">{{ shop.email | default: 'info@example.com' }}</a></p>
            </div>
          </div>
        </div>
      {%- endif -%}

    </div>
  </div>
</div>

{% schema %}
{
  "name": "Contact info",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_store_info",
      "default": true,
      "label": "Show store information"
    },
    {
      "type": "checkbox",
      "id": "show_business_hours",
      "default": true,
      "label": "Show business hours"
    },
    {
      "type": "checkbox",
      "id": "show_contact_methods",
      "default": true,
      "label": "Show contact methods"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-2"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding bottom",
      "default": 40
    }
  ],
  "presets": [
    {
      "name": "Contact info"
    }
  ]
}
{% endschema %}
