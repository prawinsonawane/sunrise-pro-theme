{{ 'sunrise-collections-grid.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .sunrise-collections-grid {
    padding: 2rem 0;
  }
  
  .sunrise-collections-grid__container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }
  
  .sunrise-collections-grid__grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }
  
  .sunrise-collections-grid__item {
    background-color: var(--color-background);
    border: 1px solid var(--color-border);
    border-radius: var(--border-radius);
    overflow: hidden;
    transition: all 0.3s ease;
    text-decoration: none;
    color: inherit;
  }
  
  .sunrise-collections-grid__item:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
  }
  
  .sunrise-collections-grid__image {
    width: 100%;
    height: 200px;
    object-fit: cover;
  }
  
  .sunrise-collections-grid__content {
    padding: 1.5rem;
  }
  
  .sunrise-collections-grid__title {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--color-text);
    margin-bottom: 0.75rem;
    line-height: 1.3;
  }
  
  .sunrise-collections-grid__description {
    color: var(--color-text-muted);
    line-height: 1.6;
    margin-bottom: 1rem;
  }
  
  .sunrise-collections-grid__count {
    font-size: 0.875rem;
    color: var(--color-text-muted);
    font-weight: 500;
  }
  
  .sunrise-collections-grid__empty {
    text-align: center;
    padding: 4rem 2rem;
  }
  
  .sunrise-collections-grid__empty-icon {
    width: 4rem;
    height: 4rem;
    margin: 0 auto 1rem;
    color: var(--color-text-muted);
  }
  
  .sunrise-collections-grid__empty-title {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--color-text);
    margin-bottom: 0.5rem;
  }
  
  .sunrise-collections-grid__empty-description {
    color: var(--color-text-muted);
  }
  
  @media (max-width: 768px) {
    .sunrise-collections-grid__grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }
    
    .sunrise-collections-grid__container {
      padding: 0 1rem;
    }
    
    .sunrise-collections-grid__content {
      padding: 1rem;
    }
  }
{%- endstyle -%}

<div class="sunrise-collections-grid">
  <div class="sunrise-collections-grid__container">
    {%- if collections.size > 0 -%}
      <div class="sunrise-collections-grid__grid">
        {%- for collection in collections -%}
          <a href="{{ collection.url }}" class="sunrise-collections-grid__item">
            {%- if collection.image -%}
              {{
                collection.image
                | image_url: width: 600
                | image_tag:
                  class: 'sunrise-collections-grid__image',
                  loading: 'lazy',
                  alt: collection.title | escape
              }}
            {%- endif -%}
            
            <div class="sunrise-collections-grid__content">
              <h3 class="sunrise-collections-grid__title">{{ collection.title }}</h3>
              
              {%- if collection.description != blank and section.settings.show_collection_description -%}
                <div class="sunrise-collections-grid__description">
                  {{ collection.description | truncate: 100 }}
                </div>
              {%- endif -%}
              
              {%- if section.settings.show_collection_count -%}
                <div class="sunrise-collections-grid__count">
                  {{ collection.products_count }} {{ 'sections.collection_list.product_count' | t: count: collection.products_count }}
                </div>
              {%- endif -%}
            </div>
          </a>
        {%- endfor -%}
      </div>
    {%- else -%}
      <div class="sunrise-collections-grid__empty">
        <svg class="sunrise-collections-grid__empty-icon" width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1">
          <path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"/>
          <polyline points="3.27,6.96 12,12.01 20.73,6.96"/>
          <line x1="12" y1="22.08" x2="12" y2="12"/>
        </svg>
        <h2 class="sunrise-collections-grid__empty-title">No collections found</h2>
        <p class="sunrise-collections-grid__empty-description">
          Collections will appear here once they are created.
        </p>
      </div>
    {%- endif -%}
  </div>
</div>

{% schema %}
{
  "name": "Collections Grid",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "Collections Grid Settings"
    },
    {
      "type": "checkbox",
      "id": "show_collection_count",
      "label": "Show Product Count",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_collection_description",
      "label": "Show Collection Description",
      "default": true
    },
    {
      "type": "range",
      "id": "columns_desktop",
      "label": "Columns on Desktop",
      "min": 2,
      "max": 4,
      "step": 1,
      "default": 3
    },
    {
      "type": "select",
      "id": "columns_mobile",
      "label": "Columns on Mobile",
      "options": [
        {
          "value": "1",
          "label": "1 column"
        },
        {
          "value": "2",
          "label": "2 columns"
        }
      ],
      "default": "1"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color Scheme",
      "default": "scheme-1"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding Top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding Bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 60
    }
  ]
}
{% endschema %}
