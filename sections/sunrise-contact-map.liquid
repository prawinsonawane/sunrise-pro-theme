{{ 'sunrise-contact-map.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .sunrise-contact-map {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .sunrise-contact-map {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .sunrise-contact-map__map {
    height: {{ section.settings.map_height }}px;
  }
{%- endstyle -%}

<div class="sunrise-contact-map color-{{ section.settings.color_scheme }} sunrise-gradient">
  <div class="page-width sunrise-contact-map__container">
    {%- if section.settings.heading != blank -%}
      <div class="sunrise-contact-map__header sunrise-text-center{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}">
        <h2 class="sunrise-contact-map__title sunrise-contact-map__title--{{ section.settings.heading_size }}">
          {{ section.settings.heading | escape }}
        </h2>
      </div>
    {%- endif -%}

    {%- if section.settings.show_map and section.settings.map_address != blank -%}
      <div class="sunrise-contact-map__map-wrapper{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
        <div class="sunrise-contact-map__map sunrise-card" id="ContactMap">
          <div class="sunrise-contact-map__placeholder">
            <svg class="sunrise-contact-map__placeholder-icon" width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1">
              <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/>
              <circle cx="12" cy="10" r="3"/>
            </svg>
            <h3>{{ 'sections.contact_map.map_placeholder_title' | t }}</h3>
            <p>{{ section.settings.map_address }}</p>
            <a href="https://maps.google.com/?q={{ section.settings.map_address | url_encode }}" target="_blank" class="sunrise-button sunrise-button--secondary">
              {{ 'sections.contact_map.open_in_google_maps' | t }}
            </a>
          </div>
        </div>
      </div>
    {%- else -%}
      <div class="sunrise-contact-map__no-map sunrise-text-center{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}">
        <div class="sunrise-contact-map__no-map-content">
          <svg class="sunrise-contact-map__no-map-icon" width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1">
            <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/>
            <circle cx="12" cy="10" r="3"/>
          </svg>
          <h3>{{ 'sections.contact_map.no_map_title' | t }}</h3>
          <p>{{ 'sections.contact_map.no_map_description' | t }}</p>
        </div>
      </div>
    {%- endif -%}
  </div>
</div>

<script src="{{ 'sunrise-contact-map.js' | asset_url }}" defer="defer"></script>

{% schema %}
{
  "name": "Contact map",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "default": "Find Us",
      "label": "Heading"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        {
          "value": "h2",
          "label": "Small"
        },
        {
          "value": "h1",
          "label": "Medium"
        },
        {
          "value": "h0",
          "label": "Large"
        }
      ],
      "default": "h1",
      "label": "Heading size"
    },
    {
      "type": "text",
      "id": "map_address",
      "default": "123 Main Street, City, State 12345",
      "label": "Map address"
    },
    {
      "type": "checkbox",
      "id": "show_map",
      "default": true,
      "label": "Show map"
    },
    {
      "type": "range",
      "id": "map_height",
      "min": 200,
      "max": 600,
      "step": 50,
      "unit": "px",
      "label": "Map height",
      "default": 400
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-2"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding bottom",
      "default": 40
    }
  ],
  "presets": [
    {
      "name": "Contact map"
    }
  ]
}
{% endschema %}
