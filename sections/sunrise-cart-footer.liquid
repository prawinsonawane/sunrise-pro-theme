{{ 'sunrise-cart-footer.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .sunrise-cart-footer {
    padding: 2rem 0;
    border-top: 1px solid var(--color-border);
    margin-top: 2rem;
  }
  
  .sunrise-cart-footer__content {
    display: grid;
    grid-template-columns: 1fr auto;
    gap: 2rem;
    align-items: center;
  }
  
  .sunrise-cart-footer__totals {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }
  
  .sunrise-cart-footer__subtotal {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--color-text);
  }
  
  .sunrise-cart-footer__subtotal-label {
    color: var(--color-text-muted);
  }
  
  .sunrise-cart-footer__subtotal-price {
    color: var(--color-primary);
  }
  
  .sunrise-cart-footer__taxes {
    font-size: 0.875rem;
    color: var(--color-text-muted);
  }
  
  .sunrise-cart-footer__actions {
    display: flex;
    gap: 1rem;
  }
  
  .sunrise-cart-footer__button {
    padding: 1rem 2rem;
    border-radius: var(--border-radius);
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }
  
  .sunrise-cart-footer__button--primary {
    background-color: var(--color-primary);
    color: var(--color-primary-contrast);
  }
  
  .sunrise-cart-footer__button--primary:hover {
    background-color: var(--color-primary-dark);
  }
  
  .sunrise-cart-footer__button--secondary {
    background-color: var(--color-background);
    color: var(--color-primary);
    border: 2px solid var(--color-primary);
  }
  
  .sunrise-cart-footer__button--secondary:hover {
    background-color: var(--color-primary);
    color: var(--color-primary-contrast);
  }
  
  .sunrise-cart-footer__button svg {
    width: 1.25rem;
    height: 1.25rem;
  }
  
  @media (max-width: 768px) {
    .sunrise-cart-footer__content {
      grid-template-columns: 1fr;
      gap: 1rem;
    }
    
    .sunrise-cart-footer__actions {
      flex-direction: column;
    }
    
    .sunrise-cart-footer__button {
      justify-content: center;
    }
  }
{%- endstyle -%}

<div class="sunrise-cart-footer">
  <div class="sunrise-cart-footer__content">
    <div class="sunrise-cart-footer__totals">
      <div class="sunrise-cart-footer__subtotal">
        <span class="sunrise-cart-footer__subtotal-label">{{ 'sections.cart.subtotal' | t }}</span>
        <span class="sunrise-cart-footer__subtotal-price">{{ cart.total_price | money }}</span>
      </div>
      
      <div class="sunrise-cart-footer__taxes">
        {{ 'sections.cart.taxes_and_shipping_at_checkout' | t }}
      </div>
    </div>
    
    <div class="sunrise-cart-footer__actions">
      <a href="{{ routes.collections_url }}" class="sunrise-cart-footer__button sunrise-cart-footer__button--secondary">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M19 12H5M12 19l-7-7 7-7"/>
        </svg>
        {{ 'general.continue_shopping' | t }}
      </a>
      
      <a href="{{ routes.cart_url }}" class="sunrise-cart-footer__button sunrise-cart-footer__button--primary">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M9 12l2 2 4-4"/>
          <path d="M21 12c-1 0-3-1-3-3s2-3 3-3 3 1 3 3-2 3-3 3"/>
          <path d="M3 12c1 0 3-1 3-3s-2-3-3-3-3 1-3 3 2 3 3 3"/>
          <path d="M12 3c0 1-1 3-3 3s-3-2-3-3 1-3 3-3 3 2 3 3"/>
          <path d="M12 21c0-1 1-3 3-3s3 2 3 3-1 3-3 3-3-2-3-3"/>
        </svg>
        {{ 'sections.cart.checkout' | t }}
      </a>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Cart Footer",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "Cart Footer Settings"
    },
    {
      "type": "checkbox",
      "id": "show_subtotal",
      "label": "Show Subtotal",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_taxes_note",
      "label": "Show Taxes Note",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_continue_shopping",
      "label": "Show Continue Shopping Button",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_checkout_button",
      "label": "Show Checkout Button",
      "default": true
    }
  ]
}
{% endschema %}
