  "name": "Article Header",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "Article Header Settings"
    },
    {
      "type": "checkbox",
      "id": "show_featured_image",
      "label": "Show Featured Image",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_date",
      "label": "Show Date",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_author",
      "label": "Show Author",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_excerpt",
      "label": "Show Excerpt",
      "default": true
    },
    {
      "type": "range",
      "id": "header_height",
      "label": "Header Height",
      "min": 300,
      "max": 600,
      "step": 50,
      "default": 400,
      "unit": "px"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color Scheme",
      "default": "scheme-1"
