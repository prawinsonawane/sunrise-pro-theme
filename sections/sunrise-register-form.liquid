{{ 'sunrise-register-form.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .sunrise-register-form {
    max-width: 400px;
    margin: 0 auto;
    padding: 2rem;
    background-color: var(--color-background);
    border: 1px solid var(--color-border);
    border-radius: var(--border-radius);
  }
  
  .sunrise-register-form__title {
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--color-text);
    margin-bottom: 1.5rem;
    text-align: center;
  }
  
  .sunrise-register-form__field {
    margin-bottom: 1rem;
  }
  
  .sunrise-register-form__label {
    display: block;
    font-weight: 500;
    color: var(--color-text);
    margin-bottom: 0.5rem;
  }
  
  .sunrise-register-form__input {
    width: 100%;
    padding: 0.75rem;
    border: 1px solid var(--color-border);
    border-radius: var(--border-radius);
    background-color: var(--color-background);
    color: var(--color-text);
    font-size: 1rem;
  }
  
  .sunrise-register-form__input:focus {
    outline: none;
    border-color: var(--color-primary);
    box-shadow: 0 0 0 3px rgba(var(--color-primary-rgb), 0.1);
  }
  
  .sunrise-register-form__button {
    width: 100%;
    padding: 0.75rem;
    background-color: var(--color-primary);
    color: var(--color-primary-contrast);
    border: none;
    border-radius: var(--border-radius);
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }
  
  .sunrise-register-form__button:hover {
    background-color: var(--color-primary-dark);
  }
  
  .sunrise-register-form__login-link {
    text-align: center;
    margin-top: 1rem;
  }
  
  .sunrise-register-form__login-link a {
    color: var(--color-primary);
    text-decoration: none;
  }
  
  .sunrise-register-form__login-link a:hover {
    text-decoration: underline;
  }
{%- endstyle -%}

<div class="sunrise-register-form">
  <h1 class="sunrise-register-form__title">Create Account</h1>
  
  {%- form 'create_customer' -%}
    <div class="sunrise-register-form__field">
      <label for="RegisterForm-FirstName" class="sunrise-register-form__label">First Name</label>
      <input
        type="text"
        id="RegisterForm-FirstName"
        name="customer[first_name]"
        class="sunrise-register-form__input"
        autocomplete="given-name"
        required
      >
    </div>
    
    <div class="sunrise-register-form__field">
      <label for="RegisterForm-LastName" class="sunrise-register-form__label">Last Name</label>
      <input
        type="text"
        id="RegisterForm-LastName"
        name="customer[last_name]"
        class="sunrise-register-form__input"
        autocomplete="family-name"
        required
      >
    </div>
    
    <div class="sunrise-register-form__field">
      <label for="RegisterForm-email" class="sunrise-register-form__label">Email</label>
      <input
        type="email"
        id="RegisterForm-email"
        name="customer[email]"
        class="sunrise-register-form__input"
        autocomplete="email"
        required
      >
    </div>
    
    <div class="sunrise-register-form__field">
      <label for="RegisterForm-password" class="sunrise-register-form__label">Password</label>
      <input
        type="password"
        id="RegisterForm-password"
        name="customer[password]"
        class="sunrise-register-form__input"
        autocomplete="new-password"
        required
      >
    </div>
    
    <button type="submit" class="sunrise-register-form__button">
      Create Account
    </button>
  {%- endform -%}
  
  <div class="sunrise-register-form__login-link">
    <p>Already have an account? <a href="{{ routes.account_login_url }}">Sign in</a></p>
  </div>
</div>

{% schema %}
{
  "name": "Register Form",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "Register Form Settings"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Create Account"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Create Account"
    }
  ]
}
{% endschema %}
