{{ 'sunrise-collection-list.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .sunrise-collection-list {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .sunrise-collection-list {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="sunrise-collection-list color-{{ section.settings.color_scheme }} sunrise-gradient">
  <div class="page-width sunrise-collection-list__container">
    {%- if section.settings.heading != blank -%}
      <div class="sunrise-collection-list__header sunrise-text-center{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}">
        <h2 class="sunrise-collection-list__title sunrise-collection-list__title--{{ section.settings.heading_size }}">
          {{ section.settings.heading | escape }}
        </h2>
        {%- if section.settings.description != blank -%}
          <div class="sunrise-collection-list__description sunrise-rte">
            {{ section.settings.description }}
          </div>
        {%- endif -%}
      </div>
    {%- endif -%}

    <div class="sunrise-collection-list__grid sunrise-grid sunrise-grid--{{ section.settings.columns_desktop }}-col-desktop sunrise-grid--{{ section.settings.columns_mobile }}-col-mobile">
      {%- for block in section.blocks -%}
        {%- assign collection = collections[block.settings.collection] -%}
        {%- if collection != blank -%}
          <div class="sunrise-collection-list__item sunrise-grid__item{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}" {{ block.shopify_attributes }}>
            <a href="{{ collection.url }}" class="sunrise-collection-list__link">
              <div class="sunrise-collection-list__image-wrapper">
                {%- if collection.featured_image != blank -%}
                  {%- assign image_height = collection.featured_image.width | divided_by: collection.featured_image.aspect_ratio -%}
                  {{
                    collection.featured_image
                    | image_url: width: 600
                    | image_tag:
                      class: 'sunrise-collection-list__image',
                      loading: 'lazy',
                      widths: '165, 360, 533, 720, 940, 1066, 1280',
                      height: image_height,
                      width: collection.featured_image.width,
                      alt: collection.featured_image.alt | escape
                  }}
                {%- else -%}
                  <div class="sunrise-collection-list__placeholder">
                    {{ 'collection-1' | placeholder_svg_tag: 'sunrise-collection-list__placeholder-svg' }}
                  </div>
                {%- endif -%}
              </div>
              
              <div class="sunrise-collection-list__content">
                <h3 class="sunrise-collection-list__collection-title">
                  {{ collection.title | escape }}
                </h3>
                
                {%- if section.settings.show_description and collection.description != blank -%}
                  <div class="sunrise-collection-list__description sunrise-rte">
                    {{ collection.description | truncate: 100 }}
                  </div>
                {%- endif -%}
                
                {%- if section.settings.show_product_count -%}
                  <div class="sunrise-collection-list__count">
                    {{ 'sections.collection_list.product_count' | t: count: collection.products_count }}
                  </div>
                {%- endif -%}
              </div>
            </a>
          </div>
        {%- else -%}
          <div class="sunrise-collection-list__item sunrise-grid__item sunrise-collection-list__item--placeholder{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}" {{ block.shopify_attributes }}>
            <div class="sunrise-collection-list__placeholder-content">
              <div class="sunrise-collection-list__placeholder-image">
                {{ 'collection-1' | placeholder_svg_tag: 'sunrise-collection-list__placeholder-svg' }}
              </div>
              <div class="sunrise-collection-list__placeholder-text">
                <h3>Collection {{ forloop.index }}</h3>
                <p>Select a collection to display here</p>
              </div>
            </div>
          </div>
        {%- endif -%}
      {%- endfor -%}
    </div>

    {%- if section.settings.show_view_all and section.settings.view_all_text != blank -%}
      <div class="sunrise-collection-list__footer sunrise-text-center{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
        <a href="{{ section.settings.view_all_link | default: '/collections' }}" class="sunrise-button{% if section.settings.view_all_style == 'secondary' %} sunrise-button--secondary{% endif %}">
          {{ section.settings.view_all_text | escape }}
        </a>
      </div>
    {%- endif -%}
  </div>
</div>

{% schema %}
{
  "name": "Collection list",
  "tag": "section",
  "class": "section",
  "blocks": [
    {
      "type": "collection",
      "name": "Collection",
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "Collection"
        }
      ]
    }
  ],
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "default": "Collections",
      "label": "Heading"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        {
          "value": "h2",
          "label": "Small"
        },
        {
          "value": "h1",
          "label": "Medium"
        },
        {
          "value": "h0",
          "label": "Large"
        }
      ],
      "default": "h1",
      "label": "Heading size"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description"
    },
    {
      "type": "range",
      "id": "columns_desktop",
      "min": 1,
      "max": 6,
      "step": 1,
      "default": 3,
      "label": "Number of columns on desktop"
    },
    {
      "type": "select",
      "id": "columns_mobile",
      "options": [
        {
          "value": "1",
          "label": "1 column"
        },
        {
          "value": "2",
          "label": "2 columns"
        }
      ],
      "default": "2",
      "label": "Number of columns on mobile"
    },
    {
      "type": "checkbox",
      "id": "show_description",
      "default": true,
      "label": "Show collection description"
    },
    {
      "type": "checkbox",
      "id": "show_product_count",
      "default": true,
      "label": "Show product count"
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "default": true,
      "label": "Show 'View all' button"
    },
    {
      "type": "text",
      "id": "view_all_text",
      "default": "View all collections",
      "label": "Button text"
    },
    {
      "type": "url",
      "id": "view_all_link",
      "label": "Button link"
    },
    {
      "type": "select",
      "id": "view_all_style",
      "options": [
        {
          "value": "primary",
          "label": "Primary"
        },
        {
          "value": "secondary",
          "label": "Secondary"
        }
      ],
      "default": "primary",
      "label": "Button style"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding bottom",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Collection list",
      "blocks": [
        {
          "type": "collection"
        },
        {
          "type": "collection"
        },
        {
          "type": "collection"
        }
      ]
    }
  ]
}
{% endschema %}
